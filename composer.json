{
	"name": "lns/digital-asset-management",
	"type": "typo3-cms-extension",
	"description": "Digital Asset Management for TYPO3",
	"license": ["GPL-2.0+"],
	"authors": [
		{
			"name": "André Bardoun",
			"email": "bardoun@schaffrath-digital.de",
			"role": "Maintainer"
		},
		{
			"name": "Jürgen Venne",
			"email": "venne@schaffrath-digital.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"psr/http-message": "^1.0.0",
		"typo3/cms-backend": "^9.5.5 || 10.0.*@dev",
		"typo3/cms-core": "^9.5.5 || 10.0.*@dev",
		"typo3/cms-fluid": "^9.5.5 || 10.0.*@dev"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.12",
		"roave/security-advisories": "dev-master",
		"typo3/testing-framework": "dev-master"
	},
	"config": {
		"bin-dir": "bin",
		"sort-packages": true
	},
	"scripts": {
		"test:php:unit": [
			"phpunit -c Build/UnitTests.xml --log-junit logs/phpunit.xml"
		],
		"test:php:functional": [
			"phpunit -c Build/FunctionalTests.xml --log-junit logs/phpunit_functionals.xml"
		],
		"test": [
			"@test:php:unit",
			"@test:php:functional"
		],
		"cgl": [
			"php-cs-fixer fix --config Build/.php_cs.dist --format=junit > logs/php-cs-fixer.xml"
		]
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "digital_asset_management"
		}
	},
	"autoload": {
		"psr-4": {
			"TYPO3\\CMS\\DigitalAssetManagement\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"TYPO3\\CMS\\DigitalAssetManagement\\Tests\\": "Tests/"
		}
	}
}
